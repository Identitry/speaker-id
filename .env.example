# Speaker-ID Environment Configuration
# Copy this file to .env and customize for your environment

# Server Configuration
APP_HOST=0.0.0.0
APP_PORT=8080

# Database Configuration
QDRANT_URL=http://localhost:6333

# Model Selection
# false = Resemblyzer (faster, lower memory)
# true = ECAPA-TDNN (more accurate, higher memory)
USE_ECAPA=false

# Audio Preprocessing (all enabled by default for better accuracy)
AUDIO_ENHANCEMENT=true
SELECT_BEST_SEGMENT=true
SCORE_CALIBRATION=true
MIN_AUDIO_DURATION=1.0

# Audio Settings
SAMPLE_RATE=16000
FORCE_MONO=true
ACCEPT_STEREO=true

# Identification Settings
DEFAULT_THRESHOLD=0.82
TOPK=5

# Logging
LOG_LEVEL=INFO

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PATH=/metrics
