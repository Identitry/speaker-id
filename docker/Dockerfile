FROM python:3.11-slim\nRUN apt-get update && apt-get install -y --no-install-recommends libsndfile1 ffmpeg && rm -rf /var/lib/apt/lists/*\nWORKDIR /app\nCOPY pyproject.toml /app/\nRUN pip install --no-cache-dir poetry && poetry config virtualenvs.create false && poetry install --no-root --no-interaction --no-ansi\nCOPY app /app/app\nCOPY configs /app/configs\nEXPOSE 8080\nCMD ["python","-m","uvicorn","app.main:APP","--host","0.0.0.0","--port","8080"]\n